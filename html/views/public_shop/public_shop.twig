		.rating input {
			display: none;
		}
		.rating label {
			font-size: 2em;
			color: #ddd;
			cursor: pointer;
		}
		.rating input:checked ~ label,
		.rating label:hover,
		.rating label:hover ~ label {
			color: #f5b301;
		}
		.rating input:checked ~ label ~ label {
			color: #ddd;
		}
		.rating input:checked + label,
		.rating input:checked + label ~ label {
			color: #f5b301;
		}
		.submit-button-container {
